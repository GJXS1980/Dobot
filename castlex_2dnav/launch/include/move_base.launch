<?xml version='1.0' encoding='utf-8'?>
<launch>
 
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

<!--                        添加                                          -->
    <param name="allow_unknown" value="false" />
    <param name="shutdown_costmaps" value="false" />
    <param name="controller_frequency" value="10" />
    <param name="planner_patience" value="5.0" />
    <param name="controller_patience" value="15.0" />
    <param name="conservative_reset_dist" value="3.0" />
    <param name="planner_frequency" value="5.0" />
    <param name="oscillation_timeout" value="10.0" />
    <param name="oscillation_distance" value="0.22" />


    <rosparam file="$(find castlex_2dnav)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find castlex_2dnav)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find castlex_2dnav)/params/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find castlex_2dnav)/params/map_nav_params/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find castlex_2dnav)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find castlex_2dnav)/params/move_base_params.yaml" command="load" />

    <!-- 将默认使用的是navfn/NavfnROS算法改为global_planner/GlobalPlanner-->
    <param name="base_global_planner" type="string" value="global_planner/GlobalPlanner" />
    
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
    
    <remap from="odom" to="odometry/filtered" />
  </node>

</launch>
